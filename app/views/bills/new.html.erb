<% provide :page_title, 'New bill' %>

<%= form_for @bill, html: { class: 'col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3' } do |f| %>
  <div class="form-group">
    <%= f.label :table %>
    <%= f.select :table_id, @tables.map{ |t| [t.name, t.id] }, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :people %>
    <%= f.select :people_number, (1..100).map{ |n| [n, n] }, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  </div>
<% end %>
