<% provide :page_title, 'Bills' %>

<%= render('actions') %>

<section class="col-xs-12 table-responsive">
  <table class="table">
    <thead>
      <tr>
        <td><%= 'Created'  %></td>
        <td><%= 'Table'    %></td>
        <td><%= 'People'   %></td>
        <td><%= 'Subtotal' %></td>
        <td><%= 'Discount' %></td>
        <td><%= 'Total'    %></td>
        <td><%= 'Status'   %></td>
      </tr>
    </thead>
    <tbody>
      <% @bills.each do |bill| %>
        <tr class="row-link" data-href="<%= bill_url(bill) %>" >
          <td><%= bill.created_at    %></td>
          <td><%= bill.table.name    %></td>
          <td><%= bill.people_number %></td>
          <td><%= bill.subtotal      %></td>
          <td><%= bill.discount      %></td>
          <td><%= bill.total         %></td>
          <td>
            <span class="label label-<%= bootstrap_status(bill.status) %>">
              <%= bill.status %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
