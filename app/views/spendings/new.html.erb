<% provide :page_title, 'Create spending' %>

<%
  crumbs = [
    crumb('Shifts', shifts_url),
    crumb("Shift #{@spending.shift.id}", shift_url(@spending.shift)),
    crumb('New spending')
  ]
%>
<%= breadcrumbs crumbs, class: 'col-xs-12' %>

<section class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <%= form_for [@shift, @spending] do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :total %>
      <%= f.text_field :total, class: 'form-control', value: '' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    </div>
  <% end %>
</section>
