<% provide :page_title, 'Create spending' %>

<%
  crumbs = [
    crumb('Shifts', shifts_url),
    crumb("Shift #{@spending.shift.id}", shift_url(@spending.shift)),
    crumb('New spending')
  ]
%>

<section class="row">
  <%= breadcrumbs crumbs, class: 'col-xs-12 col-md-6' %>
</section>

<section class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <%= form_for [@shift, @spending] do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :total %>
      <%= f.text_field :total, value: '' %>
    </div>

    <div>
      <%= f.submit 'Create', class: 'btn' %>
    </div>
  <% end %>
</section>
