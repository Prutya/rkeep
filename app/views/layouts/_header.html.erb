<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to full_title, root_url, class: 'navbar-brand' %>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" href="#">
                <%= current_user.name %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <% if current_user.admin? %>
                  <li><%= link_to 'Admin dashboard', rails_admin_url %></li>
                <% end %>
                <li><%= link_to 'Bills', bills_url %></li>
                <li><%= link_to 'Sign out', destroy_user_session_url, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Sign in', new_user_session_url %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
