<% provide :page_title, 'Password reset' %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3' }) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Send reset instructions", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
